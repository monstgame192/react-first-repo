{
  "compilerOptions": {
    "declaration": true,
    "target": "ES6",
    "outDir": "dist",
    "lib": ["DOM", "ES2019"],
    "jsx": "react-jsx",

    "module": "esnext",
    "moduleResolution": "node",
    "allowUmdGlobalAccess": true,

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["dist"]
}
